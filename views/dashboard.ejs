<%- include('partials/header') %>

<div class="row g-4 align-items-start">
  <!-- Left: text + voice -->
  <div class="col-lg-6">
    <div class="card shadow-sm rounded-3 p-4">
      <h5>Hello, <%= username %></h5>
      <p class="text-muted">Share how you feel. Use voice or type below.</p>
      <div class="mb-3">
        <textarea
          id="inputText"
          class="form-control"
          rows="6"
          placeholder="I'm feeling..."
        ></textarea>
      </div>
      <div class="d-flex gap-2">
        <button id="recordBtn" class="btn btn-outline-primary">
          ðŸŽ¤ Record
        </button>
        <button id="analyzeBtn" class="btn btn-primary">Analyze</button>
        <div
          id="loader"
          class="spinner-border text-primary ms-2 d-none"
          role="status"
        >
          <span class="visually-hidden">Loading...</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Right: result + chart -->
  <div class="col-lg-6">
    <div class="card shadow-sm rounded-3 p-4">
      <h6>Prediction</h6>
      <div id="resultLabel" class="display-6 text-primary my-3">â€”</div>
      <canvas id="pieChart" width="400" height="300"></canvas>
    </div>

    <div class="row mt-3 g-3">
      <div class="col-md-6">
        <div class="card rounded-3 p-3 shadow-sm">
          <h6>Improvements</h6>
          <ul id="improvements" class="mb-0">
            <li>Take deep breaths</li>
            <li>Short walk</li>
            <li>Try journaling</li>
          </ul>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card rounded-3 p-3 shadow-sm">
          <h6>Suggestions</h6>
          <div id="suggestions">Analyze your text to get suggestions.</div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
